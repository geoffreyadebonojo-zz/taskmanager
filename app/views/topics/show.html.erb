<h1><%= link_to "Topics", topics_path %>/<%= @topic.name %></h1>

<% if @parent %>
  <% @topic.increment.reverse.each do |ancestor| %>
     -><%= link_to ancestor.name, topic_path(ancestor.id) %>
  <% end %>
<% end %>

<% if @child %>
  -><%= link_to @child.name, topic_path(@child.id) %>
<% end %>

<div id="topic-show">
  <div class="centered"><%= link_to 'Bookmarks', "/topics/#{@topic.id}/bookmarks", class:"link"%></div>
  <div class="centered"><%= link_to 'Videos', "/topics/#{@topic.id}/videos", class:"link"%></div>
  <div class="centered"><%= link_to 'Notes', "/topics/#{@topic.id}/notes", class:"link"%></div>
  <div class="centered"><%= link_to 'Summary', "/topics/#{@topic.id}/summary", class:"link"%></div>
</div>
