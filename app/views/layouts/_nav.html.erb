<nav>

  <div>
    <% if current_user %>
    <div id="signed-in">
      <div id="profile-link">
        <%= link_to "Profile", profile_path %>
      </div>
        Signed in as <%= current_user.username %> |
        <%= link_to "Logout", logout_path, method: :delete %>
      </div>
      <div id="notice">
        <% if notice %>
          <%= notice %>
        <% else %>
          <br>
        <% end %>
      </div>
    <% else %>
      <div id="sign-in-or-register">
        <%= link_to 'Sign In', login_path %> |
        <%= link_to 'Register', registration_path %>
      </div>
    <% end %>
  </div>

</nav>
