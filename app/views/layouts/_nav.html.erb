<nav>
  <div id="notice">
    <% if notice %>
      <%= notice %>
    <% else %>
      <br>
    <% end %>
  </div>

  <div id="signed-in">
    <% if current_user %>
      <div>
        Signed in as <%= current_user.username %> |
        <%= link_to "Logout", logout_path, method: :delete %>
      </div>
    <% else %>
      <%= link_to 'Sign In', login_path %> |
      <%= link_to 'Register', registration_path %>
    <% end %>
  </div>
</nav>
