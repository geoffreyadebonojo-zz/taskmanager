<div id="nodes-container">
  <div class="root">
    <p><%= @root.name %></p>
  </div>

  <% @children.each_with_index do |child, index|%>
    <div class="children" id="child-<%= index %>">
      <p><%= child.name %></p>
    </div>
  <% end %>

  <% @grandchildren.each_with_index do |grandchild, index|%>
    <div class="grandchildren" id="grandchild-<%= index %>" parent="<%= grandchild.parent.id %>">
      <p><%= grandchild.name %></p>
    </div>
  <% end %>


</div>
