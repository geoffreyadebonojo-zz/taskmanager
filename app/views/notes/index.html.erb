<h1><%= link_to "Topics", topics_path %>/<%= link_to @topic.name, topic_path(@topic) %>/Notes</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Bookmark</th>
      <th>Video</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.body %></td>
        <td><%= note.bookmark_id %></td>
        <td><%= note.video_id %></td>
        <td><%#= link_to 'Show', topic_note %></td>
        <td><%#= link_to 'Edit', edit_note_path(note) %></td>
        <td><%#= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_topic_note_path %>
