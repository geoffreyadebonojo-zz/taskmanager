<h1><%= link_to "Topics", topics_path %>/<%= link_to @topic.name, topic_path(@topic) %>/Notes</h1>

<h3>Tags</h3>
<div id="notes-show">
  <% @notes.each do |note| %>
    <% if note.links %>
      <div><%= note.links %></div>
      <div><%= link_to "View", "/topics/#{@topic.id}/videos/new?search=#{note.links}" %></div>
      <div><%= link_to "Search", "#" %></div>
      <div><%= link_to "Create Topic", "/topics/new?topic=#{note.links}&parent=#{@parent_name}" %></div>
    <% end %>
  <% end %>
</div>
<%= link_to 'New Note', new_topic_note_path %>
