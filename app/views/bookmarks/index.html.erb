<%= link_to "Profile", profile_path %>
<%= link_to "Topics", topics_path %>

<h1>Bookmarks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.name %></td>
        <td><%= bookmark.url %></td>
        <td><%= bookmark.topic %></td>
        <td><%#= link_to 'Show', topic_bookmark_path(bookmark.id) %></td>
        <td><%#= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
        <td><%#= link_to 'Destroy', bookmark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bookmark', new_topic_bookmark_path %>
