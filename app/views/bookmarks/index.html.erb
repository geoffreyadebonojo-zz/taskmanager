<h1><%= link_to @topic.name, topic_path(@bookmarks.first.topic_id) %>/Bookmarks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.name %></td>
        <td><%= link_to bookmark.url, bookmark.url, target:"_blank" %></td>
        <td><%#= link_to 'Show', topic_bookmark_path(bookmark.id) %></td>
        <td><%#= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
        <td><%= link_to 'Destroy', "/topics/#{params[:topic_id]}/bookmarks/#{bookmark.id}", method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bookmark', new_topic_bookmark_path %>
