<h1><%= link_to "Topics", topics_path %>/<%= link_to @topic.name, topic_path(@topic) %>/Bookmarks</h1>

<%= render 'form', bookmark: @bookmark %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= link_to bookmark.name, "/topics/#{params[:topic_id]}/bookmarks/#{bookmark.id}" %></td>
        <td><%= link_to bookmark.url, bookmark.url, target:"_blank" %></td>
        <td><%#= link_to 'Show', topic_bookmark_path(bookmark.id) %></td>
        <td><%#= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
        <td><%= link_to 'Destroy', "/topics/#{params[:topic_id]}/bookmarks/#{bookmark.id}", method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
